<!DOCTYPE html>
<html>
	{% block head%}

		<head>
			<meta charset="UTF-8">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
			{% block title %}{% endblock %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
			{{ encore_entry_link_tags ('app') }}
			{{ encore_entry_script_tags ('app') }}
			<link rel="preconnect" href="https://fonts.gstatic.com">
			<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500&display=swap" rel="stylesheet">
		</head>

	{% endblock %}
	<body>
		{% block header %}

			<header>
				<nav class="navbar static-top navbar-expand-lg navbar-dark bg-gradient" style="background-color:#02335b;" role="navigation">
					<div class="container-fluid">
						<a class="navbar-brand" href="{{ path('trick_home') }}"><img src="{{ asset ('media/logo/logo-snowtricks-v6.png') }}" alt="Logo Snowtricks" height="60px" class="d-inline-block align-text-top"></a>
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>
						<div class="collapse navbar-collapse snow-nav" id="navbarSupportedContent">
							<ul class="navbar-nav me-auto mb-2 mb-lg-0">
								<li class="nav-item">
									<a class="nav-link active" aria-current="page" href="{{ path('trick_home') }}">Home</a>
								</li>
								<li class="nav-item dropdown">
									<a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Tricks</a>
									<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
										<li>
											<a class="dropdown-item" href="{{ path('trick_create') }}">Add Trick</a>
										</li>
									</ul>
								</li>

								{% if is_granted('ROLE_USER') %}
									<li class="nav-item">
										<a class="nav-link" href="{{ path("user_account", {id : user.id}) }}">My account</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
									</li>
								{% else %}
									<li class="nav-item">
										<a class="nav-link" href="{{ path('app_login') }}">Sign in</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('app_register') }}">Sign up</a>
									</li>
								{% endif %}
							</ul>
							{% if app.user %}
								<div class="logged">Logged :
									{{ app.user.userName }}</div>
							{% endif %}
						</div>
					</div>
				</nav>
			</header>

		{% endblock %}

		
		{% block content %}{% endblock %}

		{% block footer %}

			<footer style="background-color:#02335b; color:#fff;" class="footer-big bg-gradient">
				<div class="container-fluid">
					<div class="row pt-4">
						<div class="col-12 text-center">
							<p>Copyright Â©
								{{ "now"|date("Y") }}
								Snowtricks |
								<a class="blog-link" href="https://www.coyotech.fr/blog-mvc/" target="_blank">CoyoTech.fr</a>
							</p>
						</div>
					</div>
				</div>
			</footer>
			<footer style="background-color:#02335b; color:#fff;" class="footer-resp fixed-bottom mt-4 bg-gradient">
				<div class="container-fluid">
					<div class="row pt-2 pb-2">
						<div class="col-12 resp-links">
							<a href="{{ path('trick_home') }}">
								<i class="bi bi-house-fill"></i>
							</a>
							<button class="btn btn-primary toggle-btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasBottom" aria-controls="offcanvasBottom">
								<i class="bi bi-bookmarks-fill"></i>
							</button>
							<a href="{{ path('app_logout') }}">
								<i class="bi bi-box-arrow-in-right"></i>
							</a>
						</div>
					</div>
				</div>

				<div class="offcanvas offcanvas-bottom bg-gradient" style="background-color:#02335b;" tabindex="-1" id="offcanvasBottom" aria-labelledby="offcanvasBottomLabel">
					<div class="offcanvas-header">
						<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
					</div>
					<div class="offcanvas-body small">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="{{ path('trick_home') }}">Home</a>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Tricks</a>
								<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
									<li>
										<a class="dropdown-item" href="{{ path('trick_create') }}">Add Trick</a>
									</li>
								</ul>
							</li>

							{% if is_granted('ROLE_USER') %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
								</li>
							{% else %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('app_login') }}">Sign in</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{ path('app_register') }}">Sign up</a>
								</li>
							{% endif %}
						</ul>
						{% if app.user %}
							<div class="logged">Logged :
								{{ app.user.userName }}</div>
						{% endif %}
					</div>
				</div>
			</footer>

		{% endblock %}

		<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
		{% block scripts %}{% endblock %}
	</body>
</html>
