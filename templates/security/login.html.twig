{% extends '/common/template.php.twig' %}

{% block title %}
	<title>Log in!</title>
{% endblock %}

{% block content %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<h1 class="mt-3 mb-3 back-h1 text-center">Login</h1>
		<label for="inputEmail">Email</label>
		<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
		<label for="inputPassword" class="mt-3">Password</label>
		<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

		<input
		type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		{#
				        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
				        See https://symfony.com/doc/current/security/remember_me.html
				
				        <div class="checkbox mb-3">
				            <label>
				                <input type="checkbox" name="_remember_me"> Remember me
				            </label>
				        </div>
				    #}

		<button class="btn btn-lg btn-primary mt-3 mb-3 sign-form-btn" type="submit">
			Sign in
		</button>
	</form>
{% endblock %}
{% block footer %}
	<footer style="background-color:#02335b; color:#fff;" class="footer-big bg-gradient fixed-bottom">
		<div class="container-fluid">
			<div class="row pt-4">
				<div class="col-12 text-center">
					<p>Copyright Â©
						{{ "now"|date("Y") }}
						Snowtricks |
						<a class="blog-link" href="https://www.coyotech.fr/blog-mvc/" target="_blank">CoyoTech.fr</a>
					</p>
				</div>
			</div>
		</div>
	</footer>
{% endblock %}
