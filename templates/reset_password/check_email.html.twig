{% extends '/common/template.php.twig' %}

{% block title %}
	<title>Password Reset Email Sent</title>
{% endblock %}

{% block content %}

	<h1 class="mt-3 mb-3 back-h1 text-center">Your request</h1>
	<p class="text-center">
		If there is an account corresponding to your typing, an email containing a link to reset your password will be sent.
		        This link will expire in
		{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
	</p>
	<p class="text-center">If you don't receive an email please check your spam folder or
		<a href="{{ path('app_forgot_password_request') }}">try again</a>.</p>
{% endblock %}
