{% extends '/common/template.php.twig' %}

{% block title %}
<title>Reset your password</title>{% endblock %}

{% block content %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1 class="mt-3 mb-3 back-h1 text-center">Forgot password</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Enter your email address and we we will send you a
                link to reset your password.
            </small>
        </div>

        <button class="btn btn-lg btn-primary mt-3 mb-3 sign-form-btn">Ask for reset</button>
    {{ form_end(requestForm) }}
{% endblock %}
